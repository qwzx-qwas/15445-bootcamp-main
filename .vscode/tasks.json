{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (g++) via MSYS2 bash",
      "type": "shell",
      "command": "D:\\msys64\\usr\\bin\\bash.exe",
      "args": [
        "-lc",
        "export PATH=/mingw64/bin:$PATH && g++ -fdiagnostics-color=always -g -std=c++17 -pthread \"${workspaceFolder}/src/mutex.cpp\" -o \"${workspaceFolder}/src/mutex.exe\""
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true },
      "presentation": { "echo": true, "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Run mutex exe",
      "type": "shell",
      "command": "D:\\msys64\\usr\\bin\\bash.exe",
      "args": [
        "-lc",
        "cd \"${workspaceFolder}/src\" && ./mutex.exe"
      ],
      "dependsOn": "Build (g++) via MSYS2 bash",
      "presentation": { "echo": true, "reveal": "always", "panel": "dedicated" }
    }
  ]
}

